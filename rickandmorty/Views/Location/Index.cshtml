@model List<Location>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string GetActiveClass(int page)
    {
        if (ViewBag.Page == page)
        {
            return "active";
        }
        return "";
    }
}

<div class="text-center">
    <h1 class="display-4">Rick And Morty App - Locations</h1>
    <p>El Api de Rick And Morty Tiene un total de @ViewBag.AmountCharacters Locations.</p>
</div>


<div class="px-2 mt-5 row">
    @{
        foreach (var item in Model)
        {
            <div class="col-sm-3 p-2">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@item.name</h5>
                        <p class="m-0">Tipo: @item.type</p>
                        <p class="m-0">Dimensiones: @item.dimension</p>
                        <a class="nav-link text-dark border p-1 rounded text-center mt-2" asp-area="" asp-controller="Location" asp-action="Detail" asp-route-id="@item.id">Ver detalles</a>
                    </div>
                </div>
            </div>
        }
    }
</div>
<nav aria-label="Page navigation example">
    <ul class="pagination">

        @for (var i = 1; i <= 7; i++)
        {
            <li class="page-item @GetActiveClass(@i)"><a class="page-link" href="@Url.Action("Index", "Location", new {page = @i})">@i</a></li>
        }

    </ul>
</nav>
